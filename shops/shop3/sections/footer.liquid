                  {% when 'menu' %}

                  {%- assign footer_linklist = block.settings.footer_linklist -%}
                  {% if linklists[footer_linklist].links.size > 0 %}
                  <div class="col-md-6 links-footer">
                    <h3>{{ block.settings.menu_title }}</h3>
                    <ul>
                      {% comment %}
                      {% for link in linklists[footer_linklist].links %}
                      <li {% if link.object.tags and link.object.tags.size > 0 %} class="children"{% endif %}>
                        <a href="{{link.url}}">{{link.title}}</a>

                      </li>
                      {% endfor %}
                      {% endcomment %}

                      {% for link in linklists[footer_linklist].links %}
                      {% assign child_list_handle = link.title | handleize %}
                      {% if linklists[child_list_handle].links != blank %}
                      <li>
                        <p class="footer-collapse" data-toggle="collapse" data-target="#footerCollapse-{{ link.title | handleize }}">
                          <span class="nav-label">{{ link.title | escape }}</span><span class="caret"></span>
                        </p>
                        <div class="panel-collapse collapse" id="footerCollapse-{{ link.title | handleize }}">
                          <ul>
                            {% for child_link in linklists[child_list_handle].links %}
                            <li>{{ child_link.title | link_to: child_link.url }}</li>
                            {% endfor %}
                          </ul>
                        </div>
                      </li>
                      {% else %}
                      <li>
                        <a href="{{ link.url }}">{{ link.title }}</a>
                      </li>
                      {% endif %}
                      {% endfor %}
                    </ul>
                  </div>
                  {% endif %}
                  
                  
                </div>
                
              </div>
              

